{
  "name": "meetingagent4-gpt5",
  "version": "1.0.0",
  "description": "Meeting agent with Recall.ai, Deepgram, and OpenAI",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint --config config/.eslintrc.json packages/*/src/**/*.ts",
    "format": "prettier --config config/.prettierrc.json --write \"packages/*/src/**/*.{ts,js,json}\"",
    "dev": "docker-compose up",
    "health-check": "bash scripts/test-health.sh"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
